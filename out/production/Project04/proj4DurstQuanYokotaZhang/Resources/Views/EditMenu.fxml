<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>

<Menu mnemonicParsing="false" text="Edit" fx:controller="proj4DurstQuanYokotaZhang.Controllers.EditMenuController" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <MenuItem mnemonicParsing="false" text="Undo" fx:id="undoMenuButton" onAction="#handleUndoAction" accelerator="Shortcut+Z"/>
    <MenuItem mnemonicParsing="false" text="Redo" fx:id="redoMenuButton" onAction="#handleRedoAction" accelerator="Shortcut+Y"/>
    <MenuItem mnemonicParsing="false" text="Cut" fx:id="cutMenuButton" onAction="#handleCutAction" accelerator="Shortcut+X"/>
    <MenuItem mnemonicParsing="false" text="Copy" fx:id="copyMenuButton" onAction="#handleCopyAction" accelerator="Shortcut+C"/>
    <MenuItem mnemonicParsing="false" text="Paste" fx:id="pasteMenuButton" onAction="#handlePasteAction" accelerator="Shortcut+V"/>
    <MenuItem mnemonicParsing="false" text="Select all" fx:id="selectAllMenuButton" onAction="#handleSelectAllAction" accelerator="Shortcut+A"/>
</Menu>